<Window x:Class="Auto_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Auto_Client"
        mc:Ignorable="d"
        Title="Client Manager" Height="450" Width="800">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Clients" FontWeight="Bold" Margin="15,15,15,0"/>
        <ListBox x:Name="ClientsListBox"  Grid.Row="1" Margin="15" SelectionMode="Single" SelectionChanged="List_SelectionChanged"/>
        <Button Grid.Row="2" Content="Add client" Width="100" HorizontalAlignment="Right" Margin="15, 0, 15, 15" Click="AddCLient_Click"/>
    </Grid>
</Window>
